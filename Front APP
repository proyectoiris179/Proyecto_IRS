<body>
  <header>
    <img src="{{ url_for('static', filename='logo.png') }}" alt="Logo">
    <h1>COORDINACIÓN DE TELECOMUNICACIONES</h1>
  </header>
  <!-- Formulario de Registro -->
  <div id="agregar-container">
    <h2 class="titulo">Registro de Usuario</h2>
    <form method="POST">
      <label for="nombre_completo">Nombre Completo:</label>
      <input type="text" id="nombre_completo" name="nombre_completo" placeholder="Nombre Completo" required> 
      <label for="cedula">Cédula:</label>
      <input type="text" id="cedula" name="cedula" placeholder="Cédula" required>
      <label for="asignatura">Asignatura:</label>
      <input type="text" id="asignatura" name="asignatura" placeholder="Asignatura" required>
      <button type="submit" name="agregar" class="btn btn-agregar">Agregar</button>
    </form>
    <button class="btn btn-toggle" onclick="mostrarLista()">Ver Lista de Usuarios</button>
  </div>
  <!-- Lista de Usuarios -->
  <div id="usuarios-container" style="display: none;">
    <h2 class="titulo">Lista de Usuarios</h2>
    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Cédula</th>
          <th>Asignatura</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {% for usuario in usuarios %}
        <tr>
          <td>{{ usuario.nombre_completo }}</td>
          <td>{{ usuario.cedula }}</td>
          <td>{{ usuario.asignatura }}</td>
          <td>
            <!-- Botón para eliminar al usuario -->
            <form method="POST" style="display:inline;">
              <input type="hidden" name="id" value="{{ usuario.id }}">
              <button type="submit" name="eliminar" class="btn btn-eliminar">Eliminar</button>
            </form>
            <!-- Botón para agregar fotos adicionales -->
            <button class="btn btn-capturar" onclick="location.href='{{ url_for('tomarfotos_usuario', usuario_id=usuario.id) }}'">
              Agregar Foto
            </button>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    <button class="btn btn-toggle" onclick="mostrarFormulario()">Volver al Registro</button>
  </div>
  <!-- Botón para mostrar/ocultar el área de entrenamiento -->
  <button class="btn btn-toggle" onclick="toggleEntrenar()">Entrenar Algoritmo</button>
  <!-- Área oculta para ingresar y ejecutar el código de entrenamiento -->
  <div id="entrenar-container" class="hidden">
    <h2 class="titulo">Código de Entrenamiento</h2>
    <textarea id="codigo-entrenamiento" rows="8" placeholder="Escribe aquí tu código de entrenamiento..."></textarea>
    <br>
    <button class="btn btn-toggle" onclick="ejecutarEntrenamiento()">Ejecutar Entrenamiento</button>
  </div>
