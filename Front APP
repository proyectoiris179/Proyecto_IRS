  <script>
    // Funciones para alternar entre formulario y lista de usuarios
    function mostrarLista() {
      document.getElementById("agregar-container").style.display = "none";
      document.getElementById("usuarios-container").style.display = "block";
    }
    function mostrarFormulario() {
      document.getElementById("agregar-container").style.display = "block";
      document.getElementById("usuarios-container").style.display = "none";
    }
    // Funciones para alternar el área de entrenamiento
    function toggleEntrenar() {
      var container = document.getElementById("entrenar-container");
      if (container.style.display === "none" || container.style.display === "") {
        container.style.display = "block";
      } else {
        container.style.display = "none";
      }
    }
    function ejecutarEntrenamiento() {
      var codigo = document.getElementById("codigo-entrenamiento").value;
      console.log("Ejecutando entrenamiento con el siguiente código:");
      console.log(codigo);
      alert("Entrenamiento ejecutado (simulado). Revisa la consola para ver el código.");
    }
  </script>
